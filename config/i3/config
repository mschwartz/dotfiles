# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# toggle where the next window will open; toggle between to the right of or 
# below the currently active window.
bindsym $mod+t split toggle
## split in horizontal orientation
#bindsym $mod+h split h
## split in vertical orientation
#bindsym $mod+v split v

## key bindings to resize (grow/shrink) windows
bindsym $mod+x resize grow width 10 px or 10ppt
bindsym $mod+Shift+x resize shrink width 10 px or 10ppt
bindsym $mod+y resize grow height 10 px or 10ppt
bindsym $mod+Shift+y resize shrink height 10 px or 10ppt

## start a terminal
bindsym $mod+Return exec $term
bindsym $sup+Return exec kitty
bindsym $mod+Shift+Return exec kitty


## kill focused window
bindsym $mod+Shift+q kill

## enable/disable trackpad - useful to prevent accidental trackpad movement/taps when you want to type.
bindsym $sup+space exec ~/.config/i3/toggle-trackpad.sh

## start rofi (a program launcher)
bindsym $mod+d exec rofi -show run
bindsym $sup+d exec rofi -show run
## use rofi to present a list of windows to jump to
bindsym $mod+Tab exec rofi -show window
## use rofi to interactively choose a screen resolution
bindsym $mod+m exec ~/bin/set-resolution.sh
## There also is the (new) i3-dmenu-desktop which only displays applications
## shipping a .desktop file. It is a wrapper around dmenu, so you need that
## installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

## change focus - use mod or sup + vim keys to change focus to next window in that
## direction.
bindsym $mod+h focus left
bindsym $sup+h focus left
bindsym $mod+j focus down
bindsym $sup+j focus down
bindsym $mod+k focus up
bindsym $sup+k focus up
bindsym $mod+l focus right
bindsym $sup+l focus right

## alternatively, you can use the cursor keys (instead of vim keys)
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## alt-control + left/right activate previous or next workspace.
bindsym $mod+Control+Left workspace prev
bindsym $mod+Control+Right workspace next

## move focused window, using vim keys
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

## alternatively, you can use the cursor keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## move windows/containers to other monitor
bindsym $sup+Left move workspace to output left
bindsym $sup+Right move workspace to output right

## enter fullscreen mode for the focused container (distraction-free mode)
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

