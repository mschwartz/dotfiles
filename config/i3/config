###
### Top and bottom information bars.  Currently this uses bumblebee-status.
###
################################################################################
################################################################################
################################################################################

## TOP
bar {
  position top
  tray_output primary
  status_command bumblebee-status -m title cpu load memory amixer battery uptime date time -t iceberg-powerline -p interval=5
}

## BOTTOM
bar {
  position bottom
  tray_output primary
  status_command bumblebee-status -m weather arch-update disk nic traffic -t iceberg-powerline -p weather.unit=imperial -p nic.exclude="br,virbr,docker,lo" -p traffic.exclude="br,virbr,docker,lo"
}

